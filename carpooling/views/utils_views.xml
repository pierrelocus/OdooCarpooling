<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="carpooling_datetimes_view_form" model="ir.ui.view">
        <field name="name">carpooling.datetimes.view.form</field>
        <field name="model">carpooling.datetimes</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="days"/>
                        <field name="times" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="carpooling_datetimes" model="ir.actions.act_window">
        <field name="name">Carpooling datetimes</field>
        <field name="res_model">carpooling.datetimes</field>
        <field name="view_mode">form</field>
    </record>
</odoo>