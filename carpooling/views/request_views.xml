<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="carpooling_request_view_tree" model="ir.ui.view">
        <field name="name">carpooling.request.view.tree</field>
        <field name="model">carpooling.request</field>
        <field name="arch" type="xml">
            <tree>
                <field name="carpooler_id" />
                <field name="destination" />
                <field name="step_ids" widget="many2many_tags" />
                <field name="datetimes_ids" widget="many2many_tags" />
            </tree>
        </field>
    </record>

    <record id="carpooling_request_view_form" model="ir.ui.view">
        <field name="name">carpooling.request.view.form</field>
        <field name="model">carpooling.request</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_create_carpool"
                            string="Create carpool"
                            class="oe_highlight"
                            type="object"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="carpooler_id" />
                            <field name="step_ids" widget="many2many_tags" />
                        </group>
                        <group>
                            <field name="destination" />
                            <field name="datetimes_ids" widget="many2many_tags" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="carpooling_requests" model="ir.actions.act_window">
        <field name="name">Carpool Requests</field>
        <field name="res_model">carpooling.request</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>